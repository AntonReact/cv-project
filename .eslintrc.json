{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "airbnb"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "@typescript-eslint"
  ],
  "settings": {
      "import/resolver": {
        "typescript": {}
      }
  },
  "rules": {
      "react/jsx-props-no-spreading": 0,
      "max-len": 0,
      "no-template-curly-in-string": 0,
      "react/react-in-jsx-scope": 0,
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".tsx"] }],
      "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
      ]
  }
}